{
  "name": "HandlR",
  "description": "Live gesture control for Chrome",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Gesture Control"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ]
}
